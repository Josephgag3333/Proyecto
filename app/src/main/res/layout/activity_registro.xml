<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E69A"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:textSize="34sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:shadowColor="#88000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:fontFamily="sans-serif-medium"
        />

        <!-- Contenedor blanco para los campos de texto y etiquetas -->
        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_contenedor"
            android:elevation="3dp"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Etiqueta Nombres -->
            <TextView
                android:id="@+id/labelNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nombres"
                android:textStyle="bold"
                android:textColor="#88B04B"
                android:textSize="16sp" />

            <!-- Caja para escribir el nombre -->
            <EditText
                android:id="@+id/etNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/darker_gray"
                android:hint="Escribe tus nombres"
                android:textColor="@android:color/black" />

            <!-- Etiqueta Apellidos -->
            <TextView
                android:id="@+id/labelApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Apellidos"
                android:textStyle="bold"
                android:textColor="#88B04B"
                android:textSize="16sp" />

            <!-- Caja para escribir los apellidos -->
            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/darker_gray"
                android:hint="Escribe tus apellidos"
                android:textColor="@android:color/black" />

            <!-- Etiqueta Email -->
            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="#88B04B"
                android:textSize="16sp" />

            <!-- Caja para escribir el email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/darker_gray"
                android:hint="Escribe tu email"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black" />

            <!-- Etiqueta Teléfono -->
            <TextView
                android:id="@+id/labelTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Teléfono"
                android:textStyle="bold"
                android:textColor="#88B04B"
                android:textSize="16sp" />

            <!-- Caja para escribir el teléfono -->
            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/darker_gray"
                android:hint="Escribe tu teléfono"
                android:inputType="phone"
                android:textColor="@android:color/black" />

            <!-- Etiqueta Contraseña -->
            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contraseña"
                android:textStyle="bold"
                android:textColor="#88B04B"
                android:textSize="16sp" />

            <!-- Caja para escribir la contraseña -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/darker_gray"
                android:hint="Escribe tu contraseña"
                android:inputType="textPassword"
                android:textColor="@android:color/black" />

            <!-- Etiqueta Confirmar Contraseña -->
            <TextView
                android:id="@+id/labelConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirmar Contraseña"
                android:textStyle="bold"
                android:textColor="#88B04B"
                android:textSize="16sp" />

            <!-- Caja para escribir la confirmación de contraseña -->
            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/darker_gray"
                android:hint="Confirma tu contraseña"
                android:inputType="textPassword"
                android:textColor="@android:color/black" />

            <!-- Botón de Registrarse con bordes redondeados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnRegistrarse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#88B04B"
                    android:text="Registrarse"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>